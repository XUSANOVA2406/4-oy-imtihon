generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())

  profile       Profile?
  movies        Movie[]            @relation("CreatedMovies")
  favorites     Favorite[]
  reviews       Review[]
  subscriptions UserSubscription[]
}

model Profile {
  id     String  @id @default(uuid())
  bio    String?
  userId String  @unique

  user User @relation(fields: [userId], references: [id])
}

model Movie {
  id               String  @id @default(uuid())
  title            String
  description      String
  releaseYear      Int
  duration         Int
  posterUrl        String?
  subscriptionType String  @default("free")

  createdBy String
  creator   User   @relation("CreatedMovies", fields: [createdBy], references: [id])

  categories Category[] @relation("MovieCategories")
  favorites  Favorite[]
  reviews    Review[]
}

model Category {
  id   String @id @default(uuid())
  name String

  movies Movie[] @relation("MovieCategories")
}

model Favorite {
  id      String @id @default(uuid())
  userId  String
  movieId String

  user  User  @relation(fields: [userId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])
}

model Review {
  id      String  @id @default(uuid())
  rating  Int
  comment String?
  userId  String
  movieId String

  user  User  @relation(fields: [userId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])
}

model UserSubscription {
  id     String @id @default(uuid())
  type   String
  userId String

  user User @relation(fields: [userId], references: [id])
}
